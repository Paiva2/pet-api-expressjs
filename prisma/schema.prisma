generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Org {
  id             String   @id @default(uuid())
  name           String   @unique
  password       String?
  address        String
  contact_number String
  pets           Pet[]
  createdAt      DateTime @default(now())
}

model Pet {
  id        String   @id @default(uuid())
  name      String
  color     String
  age       String
  orgName   String
  createdAt DateTime @default(now())

  org Org? @relation(fields: [orgName], references: [name])
}
